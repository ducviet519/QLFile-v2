@using WebTools.Models.ViewModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model BangTinVanBanVM

@{ ViewData["Title"] = "Văn bản nội bộ";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    .treeview .list-group {
        border-radius: unset;
    }

    .sidebar {
        height: 100%;
    }

    .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
        background-color: #3882b6;
    }

    .nav-sidebar .nav-item > .nav-link {
        padding-top: 10px;
        padding-bottom: 10px;
    }

        .nav-sidebar .nav-item > .nav-link:hover {
            background-color: aliceblue;
        }

    .fieldset {
        position: relative;
        border: 1px solid #ddd;
        padding: 10px;
    }

        .fieldset h1 {
            position: absolute;
            top: 0;
            font-size: 14px;
            line-height: 1;
            margin: -9px 0 0; /* half of font-size */
            background: #fff;
            padding: 0 3px;
        }

    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        display: none;
    }

    .col-200 {
        width: 200px;
    }

    .col-265 {
        width: 265px;
    }

    .col-120 {
        width: 120px;
        padding-left: 7.5px;
        padding-right: 7.5px;
    }

    .col-130 {
        width: 130px;
        padding-left: 7.5px;
        padding-right: 7.5px;
    }

    .itemvb {
        height: 50px;
        text-transform: uppercase;
        display: flex;
        justify-content: flex-start;
        align-items: center;
