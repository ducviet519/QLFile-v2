@using WebTools.Models.ViewModel
@model GopYVM
<div class="modal fade bd-example-modal-lg" id="modalListGopY" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-comment-alt"></i> Tổng hợp Góp Ý</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-striped" id="tbGopY" width="100%">
                    <thead class="thead">
                        <tr>
                            <th class="w-auto">STT</th>
                            <th class="w-auto">Người góp ý</th>
                            <th class="w-auto">Ngày góp ý</th>
                            <th class="w-50">Nội dung</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.ListGopY != null && Model.ListGopY.Count > 0)
                        {
                            int count = 1;
                            foreach(var item in Model.ListGopY)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.NguoiGopY</td>
                                    <td>@item.NgayGopY</td>
                                    <td>@item.NoiDung</td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Đóng</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tbGopY').DataTable();
    });
</script>